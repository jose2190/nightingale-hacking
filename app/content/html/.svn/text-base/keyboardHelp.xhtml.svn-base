    <script type="text/javascript">
      /* these get imported from the DTD */
      const ACCEL = { windows: "&help.keyboard.key.ctrl;",
                      linux:   "&help.keyboard.key.ctrl;",
                      macosx:  "&help.keyboard.key.cmd;" };
      const ALT = { windows: "&help.keyboard.key.alt;",
                    linux:   "&help.keyboard.key.alt;",
                    macosx:  "&help.keyboard.key.opt;" };
      const META = { windows: "&help.keyboard.key.meta;",
                     linux:   "&help.keyboard.key.meta;",
                     macosx:  "&help.keyboard.key.cmd;" };
      <![CDATA[

        function show(platform) {
          var i, tableIdx, rowIdx;
          
          // choose which heading is selected
          var links = document.getElementById('shortcuts-nav').getElementsByTagName("li");
          for (i = 0; i < links.length; ++i) {
            links[i].className = (platform == links[i].getAttribute("platform")) ? "selected" : "";
          }
          
          // show/hide rows and set even/odd as appropriate
          var tables = document.getElementsByClassName("rows");
          for (tableIdx = 0; tableIdx < tables.length; ++tableIdx) {
            var rows = tables[tableIdx].getElementsByTagName("tr");
            var rowCount = 0;
            for (rowIdx = 0; rowIdx < rows.length; ++rowIdx) {
              var row = rows[rowIdx];
              if (row.hasAttribute("platform")) {
                if (row.getAttribute("platform").split(/\s/).indexOf(platform) == -1) {
                  // platform-specific, but not for this platform
                  row.className = "hide";
                  continue;
                }
              }
              
              // this is flipped, because the heading row shows up too
              row.className = (rowCount++ % 2) ? "odd" : "even";
            }
          }
          
          // show/hide platform-specific keys
          document.getElementById("shortcuts").setAttribute("platform", platform);
          
          // set platform-specific key naming schemes
          var keys = document.getElementsByClassName("accel");
          for (i = 0; i < keys.length; ++i) {
            keys[i].textContent = ACCEL[platform];
          }
          keys = document.getElementsByClassName("alt");
          for (i = 0; i < keys.length; ++i) {
            keys[i].textContent = ALT[platform];
          }
        }
        
        function onload() {
          var shortcuts = document.getElementById('shortcuts-nav').getElementsByTagName("a");
          for (i = 0; i < shortcuts.length; i++) {
            shortcuts[i].onclick = function(event){
              show(this.className);
              event.preventDefault();
              return false;
            };
          }
          
          if (/^Win/(navigator.platform)) {
            show("windows");
          } else if (/^Mac/(navigator.platform)) {
            show("macosx");
          } else {
            show("linux");
          }
        }
      ]]>
    </script>

  </body>
</html>
