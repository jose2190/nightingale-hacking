/**
*******************************************************************************
FIRST RUN WIZARD

Additional styles imported directly by the first run dialog.

*******************************************************************************
*/

/* Dialog styles. */
#first_run_wizard {
  height: 440px;
  width: 440px;
  margin-bottom: 4px;
}

/* Wizard page styles. */
.first-run-wizard-page {
  -moz-box-flex: 1;
  margin-top: 6px;
}

.sb-first-run-header {
  font-weight:bold;
  font-size:120%;
}

vbox[anonid="container_box"] > label,
vbox[anonid="container_box"] > description {
  margin-left: 5px;
}

.sb-first-run-checkbox-description {
  font-size: smaller;
  margin-top: 0;
}

.wizard-buttons-btm {
  padding-left: 4px;
  padding-right: 4px;
}

/* Connection page styles. */
.sb-first-run-connection-settings-box {
  -moz-box-align: center;
}

/* EULA page styles. */
.sb-first-run-eula-browser+checkbox {
  padding-top:8px;
  padding-bottom:8px;
}

.sb-first-run-eula-box {
  -moz-box-flex: 1;
}

.sb-first-run-eula-browser {
  -moz-box-flex: 1;
}

.sb-first-run-eula-language-box {
  -moz-box-align: center;
}

.sb-first-run-eula-language-menulist {
  -moz-box-flex: 1;
}

/* Feedback page styles. */
.sb-first-run-feedback-box {
  -moz-box-flex: 1;
}

.sb-first-run-feedback-email-box {
}

vbox[anonid="options_box"] {
  margin-top: 13px;
}

groupbox.sb-first-run-feedback-email-box {
  margin-top: 17px;
}

/* iTunes import/export page styles */
.sb-first-run-itunes-box {
  -moz-box-flex: 1;
}

.sb-first-run-itunes-sub-checkbox {
  font-size: smaller;
  margin-top: 0;
}


/* Import media page styles. */
radiogroup {
  margin-top:8px;
}

.sb-first-run-import-media-box {
  -moz-box-flex: 1;
}

.sb-first-run-import-media-box > radiogroup > radio {
  margin-top:8px;
}
.sb-first-run-import-media-box > radiogroup > radio:first-child {
  margin-top:0px;
}

.sb-first-run-import-media-sub-radio {
  font-size: smaller;
  margin-top: 0;
}

.sb-first-run-import-media-scan-directory-textbox {
  -moz-box-flex: 1;
}

.sb-first-run-import-media-box hbox.indent {
  margin-left: 16px;
}
.sb-first-run-import-media-box checkbox.indent {
  margin-left: 19px;
}

/* Welcome page styles. */
.sb-first-run-welcome-box {
  -moz-box-flex: 1;
}

.sb-first-run-welcome-image-box {
  -moz-box-align: center;
  -moz-box-pack: center;
}

.sb-first-run-welcome-image {
  list-style-image: url(chrome://songbird-branding/skin/first-run-welcome.png);
}

.sb-first-run-welcome-box > label.sb-first-run-header {
  margin-bottom: 0px;
}
.sb-first-run-welcome-box > description#welcome-line1 {
  margin-bottom: 25px;
}
.sb-first-run-welcome-box > description#welcome-line2 {
  margin-top: 25px;
}

/* *****************************************************************************
 *
 * First run wizard add-ons page styles.
 *
 ******************************************************************************/

/* Add-ons page box style. */
.sb-first-run-add-ons-box {
  -moz-box-flex: 1;
}

/* Add-ons page status deck style. */
.sb-first-run-add-ons-status-deck {
  -moz-box-flex: 1;
}

/* Add-ons page status text box style. */
.sb-first-run-add-ons-status-text-box {
  -moz-box-align: center;
  -moz-box-pack: center;
}

/* Add-ons page item listbox style. */
.sb-first-run-add-ons-add-on-bundle {
  -moz-box-flex: 1;
}

/* Add-ons page loading image style. */
.sb-first-run-add-ons-loading-image {
  list-style-image: url(chrome://songbird/skin/base-elements/icon-loading-white.png);
}


/* *****************************************************************************
 *
 * First run wizard install add-ons page styles.
 *
 ******************************************************************************/

/* Current add-on label style. */
.sb-first-run-install-add-ons-current-add-on-label {
  -moz-box-flex: 1;
}

/* Total progress label style. */
.sb-first-run-install-add-ons-total-progress-label {
  -moz-box-flex: 1;
  text-align: right;
}


/* *****************************************************************************
 *
 * XBL bindings.
 *
 ******************************************************************************/

sb-first-run-add-ons {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunAddOns.xml#sb-first-run-add-ons");
}

sb-first-run-connection {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunConnection.xml#sb-first-run-connection");
}

#first_run_eula_page {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunEula.xml#sb-first-run-eula");
}

sb-first-run-feedback {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunFeedback.xml#sb-first-run-feedback");
}

#first_run_itunes_page {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRuniTunes.xml#sb-first-run-itunes");
}

/* The sb-first-run-import-media binding extends sb-wizard-page directly.
 * It is therefore bound directly to a <wizardpage> by id, rather than to
 * an <sb-first-run-import-media> child of a <wizardpage>.
 */
#first_run_import_media_page {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunImportMedia.xml#sb-first-run-import-media");
}

sb-first-run-install-add-ons {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunInstallAddOns.xml#sb-first-run-install-add-ons");
}

sb-first-run-welcome {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunWelcome.xml#sb-first-run-welcome");
}

#first_run_app_update_check_page {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunAppUpdate.xml#sb-first-run-app-update-check");
}

#first_run_app_update_avail_page {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunAppUpdate.xml#sb-first-run-app-update-avail");
}

#first_run_app_update_download_page {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunAppUpdate.xml#sb-first-run-app-update-download");
}

#first_run_app_update_finished_page {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunAppUpdate.xml#sb-first-run-app-update-finished");
}

#first_run_app_update_post_page {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunAppUpdate.xml#sb-first-run-app-update-post");
}

#first_run_app_update_failed_page {
  -moz-binding: url("chrome://songbird/content/bindings/firstRun/firstRunAppUpdate.xml#sb-first-run-app-update-failed");
}
