.indent-margins {
  margin-left: 20px;
  margin-right: 20px;
}

hbox > .notch-box {
}

.notch-box > hbox {
  border-right: 2px solid;
  -moz-border-right-colors: rgb(121,120,126) rgb(61,61,61);
}

.notch-box > hbox.end {
  border-right: none;
}

.notch-box > hbox[disabled="true"] {
}

.notch-box > hbox.end[disabled="true"] {
  border-right: none;
}

.notch-0percent-description {
  text-align: left;
  margin: 0px !important;
}

.notch-100percent-description {
  text-align: right;
  margin: 0px !important;
}

.notch-0percent-description[disabled="true"] {
  color: #d3d3d3 !important;
}

.notch-100percent-description[disabled="true"] {
  color: #d3d3d3 !important;
}

.encoding-format-list {
  min-width: 4.5em;
}

