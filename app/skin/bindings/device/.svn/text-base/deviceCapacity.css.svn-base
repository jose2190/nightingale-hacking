/** 
*******************************************************************************
DEVICE CAPACITY

See app/content/bindings/device/deviceCapacity.xml

Style rules pertaining to the device capacity bar.

Imported by bindings.css or directly into feathers.

*******************************************************************************
*/

.device-capacity-legend-label {
  margin:0;
  padding:0;
}

.capacity_header_label {
  font-size:110%;
}

.capacity_value_label {
  font-size:80%;
}

.device-capacity-legend-box {
  margin-top:10px;
}

#device_capacity {
  margin-top:20px;
}

.device-capacity-bar-box {
  height: 18px;
}

.device-capacity-music,
.device-capacity-legend-color-box[type="music"] {
  background-color: rgb(0,105,245);
}

.device-capacity-video,
.device-capacity-legend-color-box[type="video"] {
  background-color: rgb(69,200,0);
}

.device-capacity-image,
.device-capacity-legend-color-box[type="image"] {
  background-color: rgb(140,42,81);
}

.device-capacity-other,
.device-capacity-legend-color-box[type="other"] {
  background-color: rgb(255,210,0);
}

.device-capacity-other2,
.device-capacity-legend-color-box[type="other2"] {
  background-color: rgb(200,40,200);
}

.device-capacity-other3,
.device-capacity-legend-color-box[type="other3"] {
  background-color: rgb(200,200,40);
}

.device-capacity-other4,
.device-capacity-legend-color-box[type="other4"] {
  background-color: rgb(40,200,200);
}

.device-capacity-free,
.device-capacity-legend-color-box[type="free"] {
  background-color: rgb(235,235,235);
}

.device-capacity-legend-color-box {
  width: 18px;
  height: 18px;
  max-width: 18px;
  max-height: 18px;
}

.device-capacity-bar-notches,
.device-capacity-box-overlay {
  background-image: url('chrome://songbird/skin/device/capacity-bar-shadow.png');
  background-repeat: repeat-x;
  background-position: left center;
}

.device-capacity-box-overlay {
  opacity: 0.3;
  border-top: 1px solid rgb(235,235,235);
  border-right: 1px solid rgb(20,20,20);
  border-bottom: 1px solid rgb(20,20,20);
  border-left: 1px solid rgb(235,235,235);
}

.device-capacity-bar-notches {
  opacity: 0.3;
  border-top: 1px solid rgb(235,235,235);
  border-right: 1px solid rgb(20,20,20);
  border-bottom: 1px solid rgb(20,20,20);
  border-left: 1px solid rgb(235,235,235);
}

.device-capacity-bar-notches hbox+hbox {
  border-left: 2px solid;
  -moz-border-left-colors: rgb(20,20,20) rgb(235,235,235);
}

.device-capacity-legend-label-box {
  margin:0 25px 0 5px;
}

