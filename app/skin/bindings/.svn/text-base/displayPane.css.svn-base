/** 
*******************************************************************************
DISPLAY PANES

See app/bindings/addonPanes.xml

Style rules pertaining to display panes (below the service pane, below the
main content area, and to the right of the main content area).

Imported by bindings.css or directly into feathers.

*******************************************************************************
*/

menuitem[target="displaypane_contentpane_bottom"] {
  list-style-image: url(chrome://songbird/skin/icons/displaypane-contentpane-bottom.png);
  -moz-image-region: rect(0px, 13px, 13px, 0px);
}

menuitem[target="displaypane_servicepane_bottom"] {
  list-style-image: url(chrome://songbird/skin/icons/displaypane-servicepane-bottom.png);
  -moz-image-region: rect(0px, 13px, 13px, 0px);
}

menuitem[target="displaypane_right_sidebar"] {
  list-style-image: url(chrome://songbird/skin/icons/displaypane-right-sidebar.png);
  -moz-image-region: rect(0px, 13px, 13px, 0px);
}

/* on hover, use the bottom half of the image (does not apply on Mac) */
menuitem.displaypane-topmenu[_moz-menuactive="true"] {
  -moz-image-region: rect(13px, 13px, 26px, 0px);
}

sb-displaypane .favicon {
  max-width: 16px;
  max-height: 16px;
  margin: 1px 0 1px 4px;
}

.sb-displaypane-menubutton {
  height: 14px;
  padding: 0 2px 0 1px;
  list-style-image: url(chrome://songbird/skin/icons/displaypane-content-picker.png);
  margin: 0;
  min-width: 10px;
  background-color:red;
  -moz-border-radius: 0;
  border-left: none;
  border-bottom: none;
}

menuitem.displaypane-menuitem[selected] {
  font-weight: bold; 
}

menuitem.displaypane-menuitem[recommended] {
  /* empty for now */ 
}

.sb-displaypane-label {
  margin-top: 0;
  margin-bottom: 0;
  padding-top: 1px;
}

.sb-displaypane-menubutton > .button-box > hbox > .button-text,
.sb-displaypane-menubutton > .button-box > .button-menu-dropmarker {
  display: none;
}

#displaypane_right_sidebar_splitter[state="collapsed"] {
  margin-left: 7px;
}

