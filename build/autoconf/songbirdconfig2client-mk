# songbirdconfig2client-mk - Translates songbird.config into options for songbird.mk.
#    Prints defines to stdout.
#
# See songbirdconfig2configure for more details

print_header() {
  _songbirdconfig=${SONGBIRDCONFIG:-$HOME/songbird.config}
  cat >> $tmp_file <<EOF
# gmake
# This file is automatically generated for client.mk.
# Do not edit. Edit $_songbirdconfig instead.

EOF
}

ac_add_options() {
  for _opt
  do
    # Escape shell characters, space, tab, dollar, quote, backslash.
    _opt=`echo $_opt | sed -e 's/\([\ \	\$\"\\]\)/\\\\\1/g;s/@\([^@]*\)@/\$\1/g;'`
    _opt=`echo $_opt | sed -e 's/@\([^@]*\)@/\$(\1)/g'`

    # Avoid adding duplicates
    case "$ac_options" in
      # Note that all options in $ac_options are enclosed in quotes,
      # so there will always be a last character to match [^-A-Za-z0-9_]
      *"\"$_opt[^-A-Za-z0-9_]"* ) ;;
      * ) songbirdconfig_ac_options="$songbirdconfig_ac_options $_opt" ;;
    esac
  done
}

ac_echo_options() {
  echo "Adding configure options from $SONGBIRDCONFIG:"
  eval "set -- $songbirdconfig_ac_options"
  for _opt
  do
    echo "  $_opt"
  done
}

mk_add_options() {
  for _opt
  do
    # Escape shell characters, space, tab, dollar, quote, backslash,
    # and substitute '@<word>@' with '$(<word>)'.
    _opt=`echo "$_opt" | sed -e 's/\([\"\\]\)/\\\1/g; s/@\([^@]*\)@/\$(\1)/g;'`
    echo $_opt;
    opts="${opts:+$opts^}$_opt";
  done >> $tmp_file
}

mk_echo_options() {
  echo "Adding songbird.mk options from $SONGBIRDCONFIG:"
  IFS=^
  for _opt in $opts; do
    echo "    $_opt"
  done
}

# Main
#--------------------------------------------------

scriptdir=`dirname $0`
topsrcdir=$1
out_file=$2
tmp_file="$out_file-tmp$$"
opts=""

ac_options=
songbirdconfig_ac_options=

trap "rm -f $tmp_file; exit 1" 1 2 15

SONGBIRDCONFIG=`$scriptdir/songbirdconfig-find $topsrcdir`

print_header > $tmp_file

# If the path changes, configure should be rerun
echo "# PATH=$PATH" >> $tmp_file

if [ "$SONGBIRDCONFIG" ]; then
  . "$SONGBIRDCONFIG"
fi

if [ "$opts" ]; then
  mk_echo_options
fi

if [ "$songbirdconfig_ac_options" ]; then
  ac_echo_options 1>&2
  echo "SONGBIRDCONFIG_CONFIGURE_OPTIONS=$songbirdconfig_ac_options" >> $tmp_file
fi

if test -f $out_file && diff $tmp_file $out_file > /dev/null; then
  rm $tmp_file
else
  mv -f $tmp_file $out_file
fi
