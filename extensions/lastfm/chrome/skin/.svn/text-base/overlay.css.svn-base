/* the next scrobbling line */
#lastfmNextTrack, #lastfmNextTime {
  font-style: italic;
}

/* the faceplate */
#lastfmFaceplate {
  margin: 0px 2px 0px 2px !important;
  padding: 0px 2px 0px 4px !important;
  max-height: 18px !important;
  
  background-image:url('bg-faceplate-buttons.png');
  background-repeat:no-repeat;
  background-position:left center;
}

#lastfmFaceplateLove {
  list-style-image: url('button-love.png');
  -moz-image-region: rect(0px, 16px, 16px, 0px);
  width: 16px;
  height: 16px;
}
#lastfmFaceplateLove:hover {
  -moz-image-region: rect(16px, 16px, 32px, 0px);
}
#lastfmFaceplateLove:active {
}
#lastfmFaceplate[loveban=love] #lastfmFaceplateLove {
  -moz-image-region: rect(0px, 32px, 16px, 16px);
}
#lastfmFaceplate[loveban=love] #lastfmFaceplateLove:hover {
  -moz-image-region: rect(16px, 32px, 32px, 16px);
}

#lastfmFaceplateBan {
  list-style-image: url('button-ban.png');
  -moz-image-region: rect(0px, 16px, 16px, 0px);
  width: 16px;
  height: 16px;
}
#lastfmFaceplateBan:hover {
  -moz-image-region: rect(16px, 16px, 32px, 0px);
}
#lastfmFaceplateBan:active {
}
#lastfmFaceplate[loveban=ban] #lastfmFaceplateBan {
  -moz-image-region: rect(0px, 32px, 16px, 16px);
}
#lastfmFaceplate[loveban=ban] #lastfmFaceplateBan:hover {
  -moz-image-region: rect(16px, 32px, 32px, 16px);
}

#lastfmFaceplateTag {
  list-style-image: url('button-tag.png');
  -moz-image-region: rect(0px, 16px, 16px, 0px);
  width: 16px;
  height: 16px;
}
#lastfmFaceplateTag:hover {
  -moz-image-region: rect(16px, 16px, 32px, 0px);
}
#lastfmFaceplateTag:active {
}

/* TAG PANEL */
popup#lastfmTagPanel {
  -moz-border-radius: 5px;
  opacity: 0.8;
  background-color: rgb(43,41,54);
}

#lastfmTagPanel #background {
	-moz-border-radius: 5px;
	background-color: black;
	opacity: 1.0;
	width: 100%;
}
#lastfmTagPanel #tag-vbox {
	padding: 4px;
	opacity: 1.0;
}

#lastfmTagPanel label {
	color: #eee;
}

#lastfmTagPanel #new-tags {
	width: 20em;
}

#lastfmTagPanel #existing-tags {
	margin-left: 4px;
}

#lastfmTagPanel image.tag-remove {
	list-style-image: url('button-delete-tag.png');
	-moz-image-region: rect(12px, 12px, 24px, 0px);
	width: 12px;
	height: 12px;
	opacity: 1.0;
	cursor: pointer !important;
}
#lastfmTagPanel image.tag-remove:hover {
	-moz-image-region: rect(24px, 12px, 36px, 0px);
	cursor: pointer;
}
#lastfmTagPanel image.tag-add {
	list-style-image: url('button-add-tag.png');
	-moz-image-region: rect(12px, 12px, 24px, 0px);
	width: 12px;
	height: 12px;
	opacity: 1.0;
	cursor: pointer !important;
}
#lastfmTagPanel image.tag-add:hover {
	-moz-image-region: rect(24px, 12px, 36px, 0px);
	cursor: pointer;
}

#lastfmTagPanel label.tag-link {
	cursor: pointer;
}
