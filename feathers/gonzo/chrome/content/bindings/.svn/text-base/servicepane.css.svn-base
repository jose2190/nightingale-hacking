/** 
*******************************************************************************

SERVICE PANE 

Applies images and layout for the left pane in the main window. 
The Service Pane is the primary area for navigating through services and 
content. It serves as the primary GUI entry point to content and services.

Imported by bindings.css or directly into feathers.

*******************************************************************************
*/ 





/* Service Pane Icons **/
.servicepane-tree > treechildren::-moz-tree-image {
  max-width: 16px;
  max-height: 16px;
  min-width: 0px;
  min-height: 0px;
  width: 16px;
  height: 16px;
}

.servicepane-tree > treechildren::-moz-tree-image( library ),
.locationbar-image[properties~="library"],
.alltabs-item.menuitem-iconic[properties~="library"],
.tabbrowser-tab[properties~="library"] > .tab-image-middle > .tab-icon > .tab-icon-image {
  list-style-image: url(chrome://songbird/skin/service-pane/icon-library.png) ;
}

.servicepane-tree > treechildren::-moz-tree-image( library video ),
.locationbar-image[properties~="library"][properties~="video"],
.alltabs-item.menuitem-iconic[properties~="library"][properties~="video"],
.tabbrowser-tab[properties~="library"][properties~="video"] > .tab-image-middle > .tab-icon > .tab-icon-image {
