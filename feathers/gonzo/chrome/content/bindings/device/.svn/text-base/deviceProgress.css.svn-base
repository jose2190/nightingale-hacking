/**
*******************************************************************************
DEVICE PROGRESS

See app/content/bindings/device/deviceProgress.xml

Style rules pertaining to the device progress widget.

Imported by bindings.css or directly into feathers.

*******************************************************************************
*/

/*
 * Main outer box for the progress widget
 */
.device-progress-box {
  -moz-box-pack: end;
  -moz-box-align: center;
}
.device-progress-button {
  max-height: 25px !important;
}

/*
 * Idle box (shows manual checkbox and sync button)
 */
.device-progress-idle-box {
  -moz-box-pack: end;
}
.device-progress-manage-separator {
  margin: 0px 17px 0px 17px !important;
}
.content-controls > radiogroup {
  border:none;
  padding:0;
  margin:0;
}

/*
 * Progress information box (shows labels and progress bar)
 */
.device-progress-information-box {
  padding: 10px 10px 10px 10px;
  border: 1px solid rgb( 138, 138, 138 );
  background-color: rgb( 241, 241, 241 );
  -moz-box-pack: end;
  -moz-box-align: center;
}
.dev-progress-text-label {
  font-size:10px;
  font-weight:bold;
/**TODO: fix hack to center the text**/
  padding-top:1px;
  padding-bottom:3px;
}
.dev-sub-progress-text-label {
  font-size:10px;
  /**TODO: fix hack to center the text**/
  padding-top:4px;
}
.dev-progress-text-label,
.dev-sub-progress-text-label {
  margin:0px;
}
.device-progressmeter {
  min-width: 200px;
  margin:0px;
}
