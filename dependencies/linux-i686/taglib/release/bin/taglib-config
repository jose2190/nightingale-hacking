#!/bin/sh

usage()
{
	echo "usage: $0 [OPTIONS]"
cat << EOH

options:
	[--libs]
	[--cflags]
	[--version]
	[--prefix]
EOH
	exit 1;
}

prefix=/builds/vendor/sb_linbot03_vendor_trunk/build/linux-i686/taglib/release
exec_prefix=/builds/vendor/sb_linbot03_vendor_trunk/build/linux-i686/taglib/release
libdir=/builds/vendor/sb_linbot03_vendor_trunk/build/linux-i686/taglib/release/lib
includedir=/builds/vendor/sb_linbot03_vendor_trunk/build/linux-i686/taglib/release/include

flags=""

if test $# -eq 0 ; then
  usage
fi

while test $# -gt 0
do
  case $1 in
    --libs)
	  flags="$flags -L$libdir -ltag"
	  ;;
    --cflags)
	  flags="$flags -I$includedir/taglib"
	  ;;
    --version)
	  echo 1.6.1
	  ;;
    --prefix)
	  echo $prefix
	  ;;
	*)
	  echo "$0: unknown option $1"
	  echo
	  usage
	  ;;
  esac
  shift
done

if test -n "$flags"
then
  echo $flags
fi
